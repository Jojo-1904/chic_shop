{% extends 'base-backend.html.twig' %}

{% block title %}Costume{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center">
        <h1>Costume</h1>
        <a href="{{ path('app_admin_costume_new') }}" class="btn btn-success">Nouveau</a>
    </div>
    <table class="table table-index table-striped table-responsive">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                {# <th>Description</th> #}
                <th>Prix</th>
                <th>Active</th>
                <th>Slug</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for costume in costumes %}
            <tr>
                <td>{{ costume.id }}</td>
                <td>{{ costume.titre }}</td>
                {# <td>{{ costume.description }}</td> #}
                <td>{{ costume.prix }}</td>
                <td>{{ costume.isActive ? 'Yes' : 'No' }}</td>
                <td>{{ costume.slug }}</td>
                <td>
                    {% include 'admin_costume/_delete_form.html.twig' %}
                    <a href="{{ path('app_admin_costume_show', {'id': costume.id}) }}" class="btn btn-dark"><i class="align-middle" data-feather="eye"></i></a>
                    <a href="{{ path('app_admin_costume_edit', {'id': costume.id}) }}" class="btn btn-success"><i class="align-middle" data-feather="edit-2"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6"><div class="test-start">Aucune donnée trouvée</div></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
