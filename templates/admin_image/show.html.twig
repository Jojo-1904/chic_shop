{% extends 'base-backend.html.twig' %}

{% block title %}Image{% endblock %}

{% block body %}
<a href="{{ path('app_admin_image_index') }}" class="btn btn-dark btn-sm mb-2">Retour à la liste</a>
    <div class="d-flex justify-content-between items-center">    
        <h1>Image</h1>
        {{ include('admin_image/_delete_form.html.twig') }}
    </div>
        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ image.id }}</td>
                </tr>
                <tr>
                    <th>Image</th>
                    <td>{{ image.imageName }}</td>
                </tr>
                <tr>
                    <th>Mis à jour</th>
                    <td>{{ image.updatedAt ? image.updatedAt|date('d-m-Y H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>Ordre</th>
                    <td>{{ image.rankOrder }}</td>
                </tr>
            </tbody>
        </table>


    <a href="{{ path('app_admin_image_edit', {'id': image.id}) }}" class="btn btn-success">Modifier</a>

{% endblock %}
